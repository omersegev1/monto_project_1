{
  "include": ["index.ts", "./src"],
  "exclude": ["./**/*.test.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["es2022", "dom"],
    "module": "NodeNext",
    "target": "es2022",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "types": ["node"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true
  }
}